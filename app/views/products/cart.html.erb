<h1>Shopping Cart</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.formatted_price %></td>
      </tr>
      <%@total += product.price_in_cents%>
    <% end %>
    <tr>
      <td>--------</td>
      <td>---------------------------------------</td>
      <td>--------</td>
    </tr>
    <tr>
      <td>Subtotal</td>
      <td></td>
      <td><%= @total.to_f / 100%></td>
    </tr>
  </tbody>
</table>
